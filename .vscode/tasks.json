{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Build Test CPU Stats",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/test_cpu_stats.cpp",
                "${workspaceFolder}/cpu_stats.cpp",
                "-o",
                "test_cpu_stats"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "meson",
            "target": "test_cpu_stats:executable",
            "mode": "build",
            "problemMatcher": [
                "$meson-gcc"
            ],
            "group": "build",
            "label": "Meson: Build test_cpu_stats:executable"
        }
    ],
    "version": "2.0.0"
}